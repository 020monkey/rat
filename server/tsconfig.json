{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es2017",
        "outDir": "dist",
        "baseUrl": ".",
        "pretty": true,
        "paths": {
            "shared/*": [
                "../shared/src/*"
            ],
            "~/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}
