{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@messages/*": ["src/messages/*"],
      "@templates": ["../shared/src/templates/index"],
      "@components/*": ["src/components/*"],
      "@app/*": ["src/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["./src/**/*"]
}
